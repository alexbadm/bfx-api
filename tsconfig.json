{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,                /* Report errors on unused locals. */
    "noUnusedParameters": true,            /* Report errors on unused parameters. */
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "rootDir": "src",
    "target": "es5",
    "outDir": "./dist",
    "lib": [ "dom", "es6" ],
    "pretty": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}