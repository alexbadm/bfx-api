{
  "compileOnSave": true,
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}